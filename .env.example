# ============================================================================
# CLIENT PORTAL SAAS - ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control
# ============================================================================

# ----------------------------------------------------------------------------
# DATABASE (PostgreSQL - Neon)
# ----------------------------------------------------------------------------
# Get your database URL from https://neon.tech
# Format: postgresql://user:password@host/database?schema=public
DATABASE_URL="postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/neondb?schema=public&sslmode=require"

# ----------------------------------------------------------------------------
# AUTHENTICATION (NextAuth.js)
# ----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-key-here-generate-with-openssl"
NEXTAUTH_URL="http://localhost:3000"

# ----------------------------------------------------------------------------
# FILE STORAGE (Cloudflare R2 - S3-compatible)
# ----------------------------------------------------------------------------
# Get credentials from https://dash.cloudflare.com -> R2
# R2 is S3-compatible and has no egress fees (cheaper than AWS S3)
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="client-portal-production"
R2_PUBLIC_URL="https://pub-xxx.r2.dev" # Optional: R2 public URL for direct access

# ----------------------------------------------------------------------------
# EMAIL SERVICE (Resend)
# ----------------------------------------------------------------------------
# Get API key from https://resend.com/api-keys
RESEND_API_KEY="re_xxxxxxxxxxxxx"

# From email address (must be verified in Resend)
RESEND_FROM_EMAIL="noreply@yourdomain.com"
RESEND_FROM_NAME="Client Portal"

# ----------------------------------------------------------------------------
# PAYMENT PROCESSING (Stripe)
# ----------------------------------------------------------------------------
# Get keys from https://dashboard.stripe.com/test/apikeys
# Use test keys for development, live keys for production
STRIPE_SECRET_KEY="sk_test_xxxxxxxxxxxxx"
STRIPE_PUBLISHABLE_KEY="pk_test_xxxxxxxxxxxxx"
STRIPE_WEBHOOK_SECRET="whsec_xxxxxxxxxxxxx" # Get from Stripe webhooks

# Stripe Price IDs (from your Stripe products)
STRIPE_PRICE_STARTER_MONTHLY="price_xxxxxxxxxxxxx"
STRIPE_PRICE_PROFESSIONAL_MONTHLY="price_xxxxxxxxxxxxx"
STRIPE_PRICE_AGENCY_MONTHLY="price_xxxxxxxxxxxxx"

# ----------------------------------------------------------------------------
# APPLICATION CONFIGURATION
# ----------------------------------------------------------------------------
# App URL (for production deployment)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Environment (development, staging, production)
NODE_ENV="development"

# ----------------------------------------------------------------------------
# OPTIONAL: LOGGING & MONITORING
# ----------------------------------------------------------------------------
# Sentry (error tracking) - https://sentry.io
# SENTRY_DSN="" # Optional: Get from Sentry dashboard
# SENTRY_ENVIRONMENT="development"

# Vercel (analytics) - Automatic if deployed on Vercel
# No configuration needed

# ----------------------------------------------------------------------------
# DEVELOPMENT ONLY
# ----------------------------------------------------------------------------
# Enable debug mode (verbose logging)
DEBUG="false"

# Skip email sending in development (log to console instead)
SKIP_EMAIL_SENDING="false"

# ----------------------------------------------------------------------------
# NOTES
# ----------------------------------------------------------------------------
# 1. Generate NEXTAUTH_SECRET with: openssl rand -base64 32
# 2. Never commit .env to git (already in .gitignore)
# 3. Use test keys for development, live keys for production
# 4. All services have free tiers for development
# 5. See docs/technical/architecture.md for service choices
# ============================================================================
